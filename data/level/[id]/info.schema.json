	"$id": "https://raw.githubusercontent.com/SeltikHD/SCP-Operation-Paradox-Mod-Schemas/refs/heads/master/pack.schema.json",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"description": "The URL to the schema file."
		},
		"name": {
			"type": "string",
			"description": "The title of the pack."
